{
    "entry": ["src/index.ts"],
    "outDir": "dist/app",
    "minify": "terser",
    "dts": true,
    "sourcemap": true,
    "minifyWhitespace": true,
    "minifyIdentifiers": true,
    "minifySyntax": true,
    "treeshake": true,
    "onSuccess": "ncp src/template-files dist/app/template-files && ncp src/dependencies dist/app/dependencies"
}
